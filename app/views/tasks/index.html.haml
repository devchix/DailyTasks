%h3 All Tasks
%table
  %tr
    %th 
      Task Name
    %th{:colspan =>3}
      Actions
    %th
  - @tasks.each do |task|
  %tr
      %td
        =link_to task.name, task
      %td
	    =button_to 'Complete', edit_task_path(task), :method => :get
 	  %td
        =button_to 'Edit', edit_task_path(task), :method => :get
      %td
        =button_to 'Delete', task, :confirm => "Are you sure you want to delete task: #{task.name} ", :method => :delete

%p
  =button_to "New Task", new_task_url

