<h1>All Tasks</h1>
<table>
<th>Task Name </th>
<th>Actions </th>
<th >
<% for task in @tasks %>
<tr>
<td>&nbsp;<%= link_to (h task.name), edit_task_path(task), :method => :get  %></td>
